@{
    ViewBag.Title = "Reserve";
}

<div class="container">

    @using (Html.BeginForm("TicketDate", "Booking", FormMethod.Post, new { onsubmit = "return validateForm()" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <!-- Form Name -->
            <legend><center><h2><b>Book a Date</b></h2></center></legend><br>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="col-md-4 control-label">
                    Enter ticket date
                </label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        @Html.TextBox("date", null, new { @class = "form-control", placeholder = "example 2010-10-28" })
                    </div>
                    <div class="input-group">
                        <p id="error"></p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <br>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                </div>
            </div>
        </div>
    }
    <script src="~/Scripts/validateDate.js"></script>
</div>